<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e7e7e7">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:orientation="vertical"
                tools:context="ru.futurobot.pikabudesignsample.MainActivity$PlaceholderFragment">


            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/post_top_bg"
                    android:minHeight="56dp">

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="4dp">

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/transparent_underline_grey">

                        <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_marginLeft="14dp"
                                android:layout_marginRight="14dp"
                                android:src="@drawable/serega"/>

                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent">

                            <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="1dp">

                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="13sp"
                                        android:text="Сегодня 16:48"
                                        android:fontFamily="sans-serif-light"
                                        android:textColor="@color/pikabu_green"
                                        android:layout_marginRight="8dp"
                                        />

                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="13sp"
                                        android:text="kamaha"
                                        android:fontFamily="sans-serif-light"
                                        android:textStyle="bold"
                                        android:textColor="#a4a4a4"
                                        />
                            </LinearLayout>

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:text="Необычный цвет"
                                    android:fontFamily="sans-serif-regular"/>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:layout_marginLeft="14dp"
                            android:fontFamily="sans-serif-light"
                            android:text="Красивый закат "
                            android:textColor="#888888"/>
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:src="@drawable/image1"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"/>
            </FrameLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="56dp"
                    android:background="@drawable/post_bottom_bg">

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="48dp">

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_weight="1"
                            android:background="@drawable/round_corners"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp">

                        <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:src="@drawable/ic_vote_up"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#ffffff"
                                android:textSize="14sp"
                                android:gravity="center_horizontal"
                                android:layout_marginLeft="4dp"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="sans-serif-regular"
                                android:text="256"/>

                        <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:background="@null"
                                android:layout_weight="1"
                                android:src="@drawable/ic_vote_down"/>
                    </LinearLayout>

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_weight="1"
                            android:background="@drawable/round_corners_green"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp">

                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_quotes"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#ffffff"
                                android:textSize="14sp"
                                android:gravity="center_horizontal|right"
                                android:layout_marginLeft="4dp"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="sans-serif-regular"
                                android:text="256"/>

                    </LinearLayout>

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_weight="1"
                            android:background="@drawable/round_corners"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp">

                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_share"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#ffffff"
                                android:textSize="14sp"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="sans-serif-regular"
                                android:text="Share"/>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:orientation="vertical"
                tools:context="ru.futurobot.pikabudesignsample.MainActivity$PlaceholderFragment">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/post_top_bg"
                    android:minHeight="56dp">

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="4dp">

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/transparent_underline_grey">

                        <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_marginLeft="14dp"
                                android:layout_marginRight="14dp"
                                android:src="@drawable/serega"
                                android:id="@+id/imageView2"/>

                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent">

                            <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="1dp">

                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="13sp"
                                        android:text="Сегодня 16:49"
                                        android:fontFamily="sans-serif-light"
                                        android:textColor="@color/pikabu_green"
                                        android:layout_marginRight="8dp"
                                        />

                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="13sp"
                                        android:text="kamaha"
                                        android:fontFamily="sans-serif-light"
                                        android:textStyle="bold"
                                        android:textColor="#a4a4a4"
                                        />
                            </LinearLayout>

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:text="Кексик"
                                    android:fontFamily="sans-serif-regular"
                                    android:id="@+id/textView2"/>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:layout_marginLeft="14dp"
                            android:fontFamily="sans-serif-light"
                            android:text="Все в спортзал"
                            android:textColor="#888888"
                            android:id="@+id/textView"/>
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/imageView"
                        android:src="@drawable/image2"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"/>
            </FrameLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="56dp"
                    android:background="@drawable/post_bottom_bg">

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="48dp">

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_weight="1"
                            android:background="@drawable/round_corners"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp">

                        <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:src="@drawable/ic_vote_up"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#ffffff"
                                android:textSize="14sp"
                                android:gravity="center_horizontal"
                                android:layout_marginLeft="4dp"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="sans-serif-regular"
                                android:text="256"/>

                        <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:background="@null"
                                android:layout_weight="1"
                                android:src="@drawable/ic_vote_down"/>
                    </LinearLayout>

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_weight="1"
                            android:background="@drawable/round_corners_green"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp">

                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_quotes"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#ffffff"
                                android:textSize="14sp"
                                android:gravity="center_horizontal|right"
                                android:layout_marginLeft="4dp"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="sans-serif-regular"
                                android:text="256"/>

                    </LinearLayout>

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_weight="1"
                            android:background="@drawable/round_corners"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp">

                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_share"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#ffffff"
                                android:textSize="14sp"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="sans-serif-regular"
                                android:text="Share"/>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
